<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.jamessimshaw.wallpaperhelper.activities.ImageZoneSelectionActivity" >


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setImageButtonText"
        android:id="@+id/cropButton"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:textColor="@color/SetImageTextColor"/>

    <com.jamessimshaw.wallpaperhelper.views.CropView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/cropView"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
